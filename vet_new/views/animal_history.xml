<odoo>
    <record id="view_vet_animal_history_wizard_form" model="ir.ui.view">
        <field name="name">vet.animal.history.wizard.form</field>
        <field name="model">vet.animal.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Animal Visit History">
                <sheet>
                    <group>
                        <field name="animal_id"/>
                        <field name="animal_name"/>
                        <field name="partner_id" />
                        <field name="contact_number"/>
                    </group>
                    <footer>
                        <button string="Search History"
                                type="object"
                                name="action_search_history"
                                class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>

                    <notebook>
                        <page string="Visit History">
                            <field name="history_line_ids">
                                <list string="History">
                                    <field name="visit_id"/>
                                    <field name="visit_date"/>
                                    <field name="doctor"/>
                                    <field name="notes"/>
                                    <field name="total_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_vet_animal_history_wizard" model="ir.actions.act_window">
        <field name="name">Animal History</field>
        <field name="res_model">vet.animal.history.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
