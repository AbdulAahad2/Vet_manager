<odoo>
    <!-- Animal List View -->
    <record id="view_animal_list" model="ir.ui.view">
        <field name="name">vet.animal.list</field>
        <field name="model">vet.animal</field>
        <field name="arch" type="xml">
            <list decoration-info="age &lt; 1" decoration-danger="age &gt; 10">
                <field name="image_1920" widget="image"/>
                <field name="microchip_no" string="Animal ID"/>
                <field name="name" string="Animal Name"/>
                <field name="species" string="Species"/>
                <field name="breed" string="Breed"/>
                <field name="owner_id" string="Owner" widget="many2one"/>
                <field name="contact_number" string="Owner Contact"/>
                <field name="age" string="Age (Years + Months)"/>
            </list>
        </field>
    </record>

    <!-- Animal Form View -->
    <record id="view_animal_form" model="ir.ui.view">
        <field name="name">vet.animal.form</field>
        <field name="model">vet.animal</field>
        <field name="arch" type="xml">
            <form string="Animal">
                <header>
                    <button name="action_archive" string="Archive" type="object" class="oe_highlight"
                        confirm="Are you sure you want to archive this animal record?"/>
                    <field name="active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <field name="image_1920" class="oe_avatar" widget="image" options="{'size': [80, 80]}"/>
                        <h1>
                            <field name="name" string="Animal Name" placeholder="e.g. Max"/>
                        </h1>
                        <h3>
                            <field name="microchip_no" string="Animal ID" readonly="1" class="oe_read_only"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Animal Details">
                            <field name="species" string="Species" widget="selection" placeholder="Select species..."/>
                            <field name="breed" string="Breed" placeholder="e.g. Labrador"/>
                            <field name="gender" string="Gender" widget="radio"/>
                        </group>
                        <group string="Health Information">
                            <field name="dob" string="Date of Birth" widget="date"/>
                            <field name="age" string="Age (Years + Months)" readonly="1"/>
                        </group>
                    </group>
                    <group string="Owner Information">
                        <field name="owner_id" string="Owner" widget="many2one" context="{'form_view_ref': 'vet.animal_owner_form'}"/>
                        <field name="contact_number" string="Owner Contact" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!-- Animal Search View -->
    <record id="view_animal_search" model="ir.ui.view">
        <field name="name">vet.animal.search</field>
        <field name="model">vet.animal</field>
        <field name="arch" type="xml">
            <search string="Search Animals">
                <field name="microchip_no" string="Animal ID"/>
                <field name="name" string="Animal Name"/>
                <field name="species" string="Species"/>
                <field name="breed" string="Breed"/>
                <field name="owner_id" string="Owner"/>
            </search>
        </field>
    </record>

    <!-- Action for Animals -->
    <record id="action_vet_animal" model="ir.actions.act_window">
        <field name="name">All Animals</field>
        <field name="res_model">vet.animal</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_animal_search"/>
    </record>
</odoo>
