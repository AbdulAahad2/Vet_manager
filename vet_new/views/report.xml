<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action -->
    <record id="action_report_receipt" model="ir.actions.report">
        <field name="name">Receipt</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vet_new.report_receipt</field>
        <field name="report_file">vet_new.report_receipt</field>
        <field name="print_report_name">'Receipt - %s' % object.name</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Receipt Template -->
    <template id="report_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="font-family: Arial, sans-serif; font-size: 13px; line-height: 1.6;">
                    <div style="text-align:center; margin-bottom:20px;">
                        <img src="/vet_new/static/src/img/logo.png" style="max-height:80px;"/><br/>
                        <span style="font-size:18px; font-weight:bold;">Healthy Tails</span>
                    </div>
                    <!-- Header Info -->
                    <table style="width:100%; margin-bottom:15px;">
                        <tr>
                            <td style="width:30%;"><strong>Patient Name</strong></td>
                            <td>: <t t-esc="doc.animal_display_name"/></td>
                        </tr>
                        <tr>
                            <td><strong>Patient Id</strong></td>
                            <td>: <t t-esc="doc.id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Pet Owner</strong></td>
                            <td>: <t t-esc="doc.partner_id.name"/></td>
                        </tr>
                        <tr>
                            <td><strong>Phone</strong></td>
                            <td>: <t t-esc="doc.partner_id.phone or ''"/></td>
                        </tr>
                        <tr>
                            <td><strong>Invoice</strong></td>
                            <td>: <t t-esc="doc.name"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date</strong></td>
                            <td>: <t t-esc="doc.invoice_date"/></td>
                        </tr>
                        <tr>
                            <td><strong>Doctor</strong></td>
                            <td>: <t t-esc="doc.invoice_user_id.name or ''"/></td>
                        </tr>
                    </table>

                    <!-- Line Items -->
                    <table style="width:100%; border-collapse: collapse; margin-top:10px;">
                        <thead>
                            <tr style="border-bottom:1px solid #000;">
                                <th style="text-align:left; width:5%;">#</th>
                                <th style="text-align:left;">Description</th>
                                <th style="text-align:right; width:20%;">Unit Price</th>
                                <th style="text-align:right; width:10%;">Qty</th>
                                <th style="text-align:right; width:20%;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.invoice_line_ids" t-as="line" t-foreach-index="i">
                                <tr>
                                    <td><t t-esc="i"/></td>
                                    <td><t t-esc="line.name or line.product_id.display_name"/></td>
                                    <td style="text-align:right;">PKR <t t-esc="line.price_unit"/></td>
                                    <td style="text-align:right;"><t t-esc="line.quantity"/></td>
                                    <td style="text-align:right;">PKR <t t-esc="line.price_subtotal"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Totals -->
                    <table style="width:100%; margin-top:10px;">
                        <tr>
                            <td style="text-align:right;">Sub Total :</td>
                            <td style="text-align:right; width:20%;">PKR <t t-esc="doc.amount_untaxed"/></td>
                        </tr>
                        <tr>
                            <td style="text-align:right;">Discount :</td>
                            <td style="text-align:right;">PKR 0.00</td>
                        </tr>
                        <tr>
                            <td style="text-align:right;">VAT : 0.00 %</td>
                            <td style="text-align:right;">PKR 0.00</td>
                        </tr>
                        <tr>
                            <td style="text-align:right;"><strong>Grand Total :</strong></td>
                            <td style="text-align:right;"><strong>PKR <t t-esc="doc.amount_total"/></strong></td>
                        </tr>
                        <tr>
                            <td style="text-align:right;">Deposit Type :</td>
                            <td style="text-align:right;">Cash</td>
                        </tr>
                        <tr>
                            <td style="text-align:right;">Amount Received :</td>
                            <td style="text-align:right;">PKR 0</td>
                        </tr>
                        <tr>
                            <td style="text-align:right;">Amount To Be Paid :</td>
                            <td style="text-align:right;">PKR <t t-esc="doc.amount_total"/></td>
                        </tr>
                        <tr>
                            <td style="text-align:right;">Old Dues :</td>
                            <td style="text-align:right;">PKR 0</td>
                        </tr>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>
