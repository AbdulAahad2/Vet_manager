<odoo>
    <!-- ===================== KANBAN VIEW ===================== -->
    <record id="view_vet_animal_visit_kanban" model="ir.ui.view">
        <field name="name">vet.animal.visit.kanban</field>
        <field name="model">vet.animal.visit</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_vet_dashboard">
                <field name="name"/>
                <field name="animal_id"/>
                <field name="animal_pic"/>
                <field name="animal_display_name"/>
                <field name="owner_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="total_amount"/>
                <field name="debug_animal_pic" readonly="1"/>

                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card p-2 border rounded shadow-sm">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <!-- Animal Image or Fallback Icon -->
                                <div class="o_kanban_image me-2">
                                    <t t-if="1 == 1">
                                        <field name="animal_pic" class="oe_avatar" widget="image" options="{'size': [80, 80]}"/>
                                    </t>
                                    <t t-else="">
                                        <img src="/vet_new/static/src/img/logo.png" class="oe_avatar img-fluid rounded-circle" style="width:80px;height:80px;"/>
                                    </t>
                                </div>
                                <!-- Main Info -->
                                <div class="flex-fill">
                                    <strong class="d-block fs-6">
                                        <t t-esc="record.animal_id.display_name or record.animal_display_name.value"/>
                                    </strong>
                                    <small class="text-muted d-block">
                                        <t t-esc="record.owner_id.value"/>
                                    </small>
                                    <small class="d-block">
                                        <i class="fa fa-user-md me-1"></i> <t t-esc="record.doctor_id.value or '-'"/>
                                    </small>
                                    <small class="d-block">
                                        <i class="fa fa-calendar me-1"></i> <t t-esc="record.date.value"/>
                                    </small>
                                </div>
                                <!-- Right-side info -->
                                <div class="text-end">
                                    <span t-attf-class="badge rounded-pill #{record.state.raw_value == 'done' and 'bg-success' or record.state.raw_value == 'draft' and 'bg-secondary' or 'bg-warning'}">
                                        <t t-esc="record.state.value"/>
                                    </span>
                                    <div class="fw-bold mt-1 fs-5">
                                        <t t-esc="record.total_amount.value or 0.00"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

   <!-- ===================== FORM VIEW ===================== -->
    <record id="view_vet_animal_visit_form" model="ir.ui.view">
        <field name="name">vet.animal.visit.form</field>
        <field name="model">vet.animal.visit</field>
        <field name="arch" type="xml">
            <form string="Animal Visit" class="o_vet_dashboard_form">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancel"/>
                        <button name="action_pay_invoice" type="object" string="Pay Invoice" invisible="not has_unpaid_invoice"/>
                    </header>
                    <button name="action_pay_invoice" type="object" string="Pay Invoice" invisible="not has_unpaid_invoice"/>

                    <div class="oe_title mb-2">
                        <h2><field name="name"/></h2>
                    </div>
                        <!-- LEFT PANEL -->
                        <group style="flex:2; gap:0.2rem; margin:0;">
                            <!-- Owner Information -->
                            <group string="Owner Information" class="p-2 border rounded shadow-sm" style="background:#f8f9fa; margin-bottom:0;">
                                <field name="owner_id" on_change="1"/>
                                <field name="contact_number" on_change="1"/>
                                <field name="animal_ids" widget="many2many_tags" string="Owner's Animals" domain="[('owner_id', '=', owner_id)]"/>
                                <field name="selected_animal_id" string="Select Animal" domain="[('id', 'in', animal_ids)]"/>
                            </group>

                            <!-- General Info -->
                            <group string="General Info" class="p-2 border rounded shadow-sm" style="background:#f8f9fa; margin-bottom:0;">
                                <div class="d-flex" style="gap:0.2rem;">
                                    <div style="flex:1;">
                                        <group>
                                            <field name="animal_pic" class="oe_avatar" widget="image" style="margin-right:50px; height:90px;width:90px;"/>
                                            <field name="animal_id" string="Animal ID"/>
                                            <field name="animal_display_name"/>
                                            <field name="date"/>
                                            <field name="doctor_id"/>
                                            <field name="notes"/>
                                            <field name="treatment_charge" string="Treatment Charge"/>
                                        </group>
                                    </div>
                                </div>
                            </group>

                        <!-- RIGHT PANEL: Receipt -->
                        <group string="Receipt" class="p-2 border rounded shadow-sm"
                               style="background:#fff; flex:1; height:663px; margin-top:-225px; margin-left:5px; margin-right:-9.5px">
                            <!-- Scrollable receipt lines -->
                            <div style="overflow-y:auto; max-height:250px; width:100%; border:1px solid #ddd; box-sizing:border-box;">
                                <field name="receipt_lines">
                                    <list editable="bottom" options="{'no_footer': True}" style="width:100%; box-sizing:border-box;">
                                        <field name="service_id" string="Item" style="border-bottom:1px solid #eee; text-align:left; width:50%; box-sizing:border-box;"/>
                                        <field name="quantity" string="Qty" style="border-bottom:1px solid #eee; text-align:right; width:15%; box-sizing:border-box;"/>
                                        <field name="price_unit" string="Price" readonly="1" style="border-bottom:1px solid #eee; text-align:right; width:20%; box-sizing:border-box;"/>
                                        <field name="subtotal" string="Subtotal" readonly="1" style="border-bottom:1px solid #eee; text-align:right; width:15%; box-sizing:border-box;"/>
                                    </list>
                                </field>
                            </div>
                            <!-- Totals -->
                            <group class="d-flex flex-column mt-2 mb-0" style="gap:0.2rem;">
                                <field name="subtotal" readonly="1" string="Subtotal" widget="monetary" currency_field="currency_id"/>
                                <field name="treatment_charge" readonly="1" string="Treatment Charge" widget="monetary" currency_field="currency_id"/>
                                <field name="discount_percent" string="Discount (%)" widget="monetary" currency_field="currency_id"/>
                                <field name="discount_fixed" string="Discount (Fixed)" widget="monetary" currency_field="currency_id"/>
                                <field name="total_amount" readonly="1" string="Total" widget="monetary" class="fw-bold fs-5 text-primary" currency_field="currency_id"/>
                            </group>
                        </group>
                    </group>
                    <!-- NOTEBOOK FOR SERVICES / TESTS / MEDICINES -->
                    <notebook class="mt-2">
                        <page string="Services">
                            <field name="service_line_ids">
                                <list editable="bottom">
                                    <field name="service_id" domain="[('service_type','=','service')]"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Tests">
                            <field name="test_line_ids">
                                <list editable="bottom">
                                    <field name="service_id" domain="[('service_type','=','test')]"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Medicines">
                            <field name="medicine_line_ids">
                                <list editable="bottom">
                                    <field name="service_id" domain="[('service_type','=','vaccine')]"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- ===================== LIST VIEW ===================== -->
    <record id="view_vet_animal_visit_list" model="ir.ui.view">
        <field name="name">vet.animal.visit.list</field>
        <field name="model">vet.animal.visit</field>
        <field name="arch" type="xml">
            <list string="Animal Visits" create="true" delete="true">
                <field name="name"/>
                <field name="date"/>
                <field name="animal_id" string="Animal ID"/>
                <field name="animal_name" string="Animal Name"/>
                <field name="owner_id"/>
                <field name="doctor_id"/>
                <field name="state"/>
                <field name="payment_state"/>
                <field name="total_amount"/>
            </list>
        </field>
    </record>

    <!-- ===================== SEARCH VIEW ===================== -->
    <record id="view_vet_animal_visit_search" model="ir.ui.view">
        <field name="name">vet.animal.visit.search</field>
        <field name="model">vet.animal.visit</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="animal_id"/>
                <field name="owner_id"/>
                <field name="doctor_id"/>
                <filter name="unpaid_invoices" string="Unpaid" domain="[('payment_state','=','not_paid')]"/>
                <filter name="paid_invoices" string="Paid" domain="[('payment_state','=','paid')]"/>
                <filter name="owner_name" string="Owner" context="{'group_by':'owner_id'}"/>
                <filter name="doctor_name" string="Doctor" context="{'group_by':'doctor_id'}"/>
                <filter name="payment_state" string="Payment State" context="{'group_by':'payment_state'}"/>
                <filter name="animal_name_group" string="Animal Name" context="{'group_by':'animal_name'}"/>
            </search>
        </field>
    </record>

    <!-- ===================== ACTION WINDOW ===================== -->
    <record id="action_vet_animal_visit" model="ir.actions.act_window">
        <field name="name">Animal Visits</field>
        <field name="res_model">vet.animal.visit</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_vet_animal_visit_search"/>
    </record>

    <!-- ===================== INVOICE LIST VIEW ===================== -->
    <record id="view_vet_animal_visit_invoice_list" model="ir.ui.view">
        <field name="name">vet.animal.visit.invoice.list</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Invoices">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="state"/>
                <field name="payment_state"/>
                <field name="amount_total"/>
            </list>
        </field>
    </record>

    <!-- ===================== INVOICE FORM VIEW ===================== -->
    <record id="view_vet_animal_visit_invoice_form" model="ir.ui.view">
        <field name="name">vet.animal.visit.invoice.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="state"/>
                        <field name="payment_state"/>
                        <field name="amount_total"/>
                    </group>
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="invoice_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids"/>
                                    <field name="price_subtotal"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== ACTION TO VIEW RELATED INVOICES ===================== -->
    <record id="action_vet_animal_visit_invoices" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_vet_animal_visit_invoice_list"/>
        <field name="domain">[('id','in', active_id and env['vet.animal.visit'].browse(active_id).invoice_ids.ids or [])]</field>
        <field name="context">{'default_partner_id': active_id and env['vet.animal.visit'].browse(active_id).owner_id.id}</field>
    </record>
</odoo>
