<odoo>
    <!-- Inherit Animal Visit Form to add Invoice buttons in header -->
    <record id="view_vet_animal_visit_form_invoices_header" model="ir.ui.view">
        <field name="name">vet.animal.visit.form.header.buttons</field>
        <field name="model">vet.animal.visit</field>
        <field name="inherit_id" ref="vet_new.view_vet_animal_visit_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="replace">
                <header>
                    <!-- Create Invoice Button (calls Python method) -->
                    <button name="action_create_invoice"
                            type="object"
                            string="Create Invoice"
                            class="btn-primary"/>

                    <!-- View Invoices Button (calls Python method) -->
                    <button name="action_view_invoices"
                            type="object"
                            string="Invoices"
                            class="oe_stat_button"
                    />

                    <!-- Statusbar -->
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,done,cancel"/>
                </header>
            </xpath>
        </field>
    </record>

    <!-- Tree view for invoices (filtered by current visit) -->
    <record id="view_vet_animal_visit_invoice_list" model="ir.ui.view">
        <field name="name">vet.animal.visit.invoice.list</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Invoices">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="state"/>
                <field name="payment_state"/>
                <field name="amount_total"/>
            </list>
        </field>
    </record>

    <!-- Form view for invoices -->
    <record id="view_vet_animal_visit_invoice_form" model="ir.ui.view">
        <field name="name">vet.animal.visit.invoice.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="state"/>
                        <field name="payment_state"/>
                        <field name="amount_total"/>
                    </group>
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="invoice_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids"/>
                                    <field name="price_subtotal"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_invoice" model="ir.actions.act_window">
        <field name="name">Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
